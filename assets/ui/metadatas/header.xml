<hbox verticalAlign="center">
	<hbox width="15%"
		id="user"
		height="100%">
		<image id="thumbnail"
			width="72px"
			horizontalAlign="center"
			verticalAlign="center" />
		<label text=""
			textAlign="left"
			id="username_label"
			horizontalAlign="center"
			verticalAlign="center" />
	</hbox>
	<group id="langSwitcher_group"
		layout="horizontal"
		width="25%"
		height="100%"
		horizontalAlign="center">
		<optionbox userData="en-GB"
			text="EN"
			id="en"
			selected="true" />
		<optionbox userData="fr-FR"
			text="FR"
			id="fr" />
		<optionbox userData="de-DE"
			text="DE"
			id="de" />
		<optionbox userData="it-IT"
			text="IT"
			id="it" />
	</group>
	<label id="app_label"
		text="{{app_label}}"
		horizontalAlign="center"
		height="100%"
		width="55%"
		styleName="h1" />
	<button id="logoff_button"
		icon="images/logoff_button.png"
		horizontalAlign="center"
		
		width="5%"
		height="100%" />
</hbox>
