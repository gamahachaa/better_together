<hbox id="header"
	height="2%"
	width="100%">
	<label id="app_label"
		text="{{app_label}}"
		height="5%"
		width="40%" 
		styleName="h1"
		/>
	
	<group id="langSwitcher_group"
		layout="horizontal"
		width="35%">
		<optionbox userData="en-GB"
			text="EN"
			id="en"
			selected="true" />
		<optionbox userData="fr-FR"
			text="FR"
			id="fr" />
		<optionbox userData="de-DE"
			text="DE"
			id="de" />
		<optionbox userData="it-IT"
			text="IT"
			id="it" />
	</group>
	
	<label text=""
		textAlign="left"
		id="version_label"
		width="15%" />
	<button id="logoff_button" icon="images/logoff_button.png"/>
	<image id="thumbnail" style="border:1px solid $normal-border-color" width="64px"/>
</hbox>